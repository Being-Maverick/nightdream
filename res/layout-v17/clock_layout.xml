<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
<!--
        time
-->
    <LinearLayout
        android:id="@+id/time_layout"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <TextClock
            android:clickable="true"
            android:fontFamily="sans-serif-thin"
            android:format12Hour="h:mm"
            android:format24Hour="kk:mm"
            android:id="@+id/clock"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#C2C2C2"
            android:singleLine="true"
            android:ellipsize="none"
            android:text="00:00"
            android:translationX="0sp"
            android:translationY="0sp"
            />
        <TextClock
            android:clickable="true"
            android:fontFamily="sans-serif-thin"
            android:format12Hour="a"
            android:format24Hour=""
            android:id="@+id/clock_ampm"
            android:layout_gravity="top"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#C2C2C2"
            android:textSize="20sp"
            android:singleLine="true"
            android:ellipsize="none"
            />
    </LinearLayout>
<!--
    divider
-->
    <View
        android:id="@+id/divider"
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="#C2C2C2" />
<!--
    Date
-->
    <LinearLayout
        android:id="@+id/info"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TextClock
            android:id="@+id/date"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:translationX="0sp"
            android:translationY="0sp"
            android:fontFamily="sans-serif-light"
            android:textStyle="bold"
            android:format12Hour="dd. MMMM yyyy"
            android:format24Hour="dd. MMMM yyyy"
            android:textColor="#C2C2C2"
            android:text="Sun, 30. October 2016"
            android:singleLine="true"
            android:ellipsize="none"
            android:paddingTop="5sp" />

        <com.firebirdberlin.nightdream.ui.WeatherLayout
            android:id="@+id/weatherLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            />
    </LinearLayout>
</LinearLayout>
