<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="false"
    android:orientation="vertical"
    tools:targetApi="honeycomb">


    <RelativeLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="false"
        android:background="@android:color/transparent"
        android:paddingEnd="20dp"
        android:paddingRight="20dp"
        android:paddingStart="20dp">

        <TextView
            android:id="@+id/timeView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"

            android:fontFamily="sans-serif"
            android:text="09:00"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:textSize="40sp"
            tools:ignore="HardcodedText" />

        <Switch
            android:id="@+id/enabled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="false"
            android:layout_centerVertical="true"
            android:layout_marginTop="15dp"
            tools:targetApi="ice_cream_sandwich" />

        <RelativeLayout
            android:id="@+id/middle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/timeView"
            android:animateLayoutChanges="true"
            android:animationCache="true">

            <TextView
                android:id="@+id/textViewWhen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="false"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="false"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="@string/today"
                android:textAppearance="@android:style/TextAppearance.Small" />

            <LinearLayout
                android:id="@+id/secondaryLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewWhen"
                android:orientation="vertical"
                android:visibility="gone">

                <CheckBox
                    android:id="@+id/checkBoxIsRepeating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/repeat" />

                <LinearLayout
                    android:id="@+id/layoutDays"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="false"
                    android:orientation="horizontal">

                    <ToggleButton
                        android:id="@+id/dayButton1"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textOff="M"
                        android:textOn="M"
                        tools:ignore="HardcodedText" />

                    <ToggleButton
                        android:id="@+id/dayButton2"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textOff="T"
                        android:textOn="T" />

                    <ToggleButton
                        android:id="@+id/dayButton3"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textOff="W"
                        android:textOn="W" />

                    <ToggleButton
                        android:id="@+id/dayButton4"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textOff="T"
                        android:textOn="T" />

                    <ToggleButton
                        android:id="@+id/dayButton5"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textOff="F"
                        android:textOn="F" />

                    <ToggleButton
                        android:id="@+id/dayButton6"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textOff="S"
                        android:textOn="S" />

                    <ToggleButton
                        android:id="@+id/dayButton7"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textOff="S"
                        android:textOn="S" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textViewSound"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_music_note_24dp"
                    android:drawableStart="@drawable/ic_music_note_24dp"
                    android:paddingBottom="6dp"
                    android:paddingTop="6dp"
                    android:text="Alarm sound"
                    android:textAppearance="@android:style/TextAppearance.Small" />

                <Button
                    android:id="@+id/button_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_delete"
                    android:drawableStart="@drawable/ic_delete"
                    android:onClick="onButtonDeleteClick"
                    android:text="@string/delete"
                    tools:drawableLeft="@drawable/ic_delete" />
            </LinearLayout>

            <ImageView
                android:id="@+id/button_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:padding="5dp"
                android:scaleX="0.5"
                android:scaleY="0.5"
                android:src="@drawable/ic_expand"
                android:visibility="visible" />


        </RelativeLayout>


    </RelativeLayout>
</LinearLayout>