<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:padding="10dp">

    <TextView
        android:id="@+id/date_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/timerange_label_start"
        android:textStyle="bold"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editTextHourStart"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:ems="12"
            android:maxEms="2"
            android:hint="hh"
            android:maxLength="2"
            android:inputType="number" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"/>
        <EditText
            android:id="@+id/editTextMinuteStart"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:ems="12"
            android:maxEms="2"
            android:hint="mm"
            android:maxLength="2"
            android:inputType="number" />

        <ToggleButton
            android:id="@+id/toggleAmPmStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/date_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/timerange_label_end"
        android:paddingTop="10dp"
        android:textStyle="bold"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editTextHourEnd"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:ems="12"
            android:maxEms="2"
            android:hint="hh"
            android:maxLength="2"
            android:inputType="number" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"/>
        <EditText
            android:id="@+id/editTextMinuteEnd"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:ems="12"
            android:maxEms="2"
            android:hint="mm"
            android:maxLength="2"
            android:inputType="number" />

        <ToggleButton
            android:id="@+id/toggleAmPmEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
</LinearLayout>
