<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:paddingBottom="10dp"
    android:paddingStart="10dp"
    android:paddingTop="5sp"
    android:visibility="visible">

    <TextView
        android:id="@+id/timeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="TimeView"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/iconText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:ellipsize="none"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:text="m"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        android:textSize="60sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:elevation="1dp"
            android:orientation="horizontal"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/temperatureText"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:ellipsize="none"
                android:maxLines="1"
                android:paddingLeft="5sp"
                android:text="10Â°C"
                android:textAppearance="@android:style/TextAppearance.Medium" />

            <TextView
                android:id="@+id/iconWind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="none"
                android:maxLines="1"
                android:paddingLeft="5sp"
                android:text=""
                android:textAppearance="@android:style/TextAppearance.Medium" />

            <com.firebirdberlin.nightdream.ui.DirectionIconView
                android:id="@+id/iconWindDirection"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:elevation="0dp"
                android:fadingEdge="horizontal|vertical"
                android:paddingLeft="5sp" />

            <TextView
                android:id="@+id/windText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="none"
                android:maxLines="1"
                android:paddingLeft="5sp"
                android:text="10,3km/h"
                android:textAppearance="@android:style/TextAppearance.Medium" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:elevation="1dp"
            android:orientation="horizontal"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/iconClouds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="none"
                android:maxLines="1"
                android:paddingLeft="5sp"
                android:text=""
                android:textAppearance="@android:style/TextAppearance.Medium" />

            <TextView
                android:id="@+id/cloudText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="none"
                android:maxLines="1"
                android:paddingLeft="5sp"
                android:text="25 %"
                android:textAppearance="@android:style/TextAppearance.Medium" />

            <TextView
                android:id="@+id/iconRain3h"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="none"
                android:maxLines="1"
                android:paddingLeft="15sp"
                android:text=""
                android:textAppearance="@android:style/TextAppearance.Medium" />

            <TextView
                android:id="@+id/rainText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="none"
                android:maxLines="1"
                android:paddingLeft="5sp"
                android:text="0.3mm"
                android:textAlignment="textEnd"
                android:textAppearance="@android:style/TextAppearance.Medium" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
